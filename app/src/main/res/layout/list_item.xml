<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?attr/listPreferredItemHeight"
    android:background="@color/white"
    android:padding="?attr/listPreferredItemPaddingLeft">

    <TextView
        android:id="@+id/text_view_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:layout_margin="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Anas"/>


    <TextView
        android:id="@+id/created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_dark"
        android:layout_margin="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/text_view_list_item"
        android:paddingRight="4dp"
        android:text="Created By"/>

    <TextView
        android:id="@+id/text_view_created_by_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_dark"
        android:layout_below="@+id/text_view_list_item"
        android:layout_alignBaseline="@+id/created_by"
        android:layout_toEndOf="@+id/created_by"
        android:layout_toRightOf="@+id/created_by"
        android:text="hello"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_view_list_item"
        android:layout_alignBaseline="@+id/created_by"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:text= "time"
        android:textColor="@color/primary" />

</RelativeLayout>